<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amount"
        android:layout_marginTop="10dp"
        android:layout_gravity="start"
        style="@style/App.Input.Text.Small"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/amount_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:expandedHintEnabled="false"
        app:prefixText="$"
        app:suffixText="AU"
        style="@style/App.Input.Layout">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/amount_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:inputType="number"
            style="@style/App.Input.Layout"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/category"
        android:layout_marginTop="10dp"
        android:layout_gravity="start"
        style="@style/App.Input.Text.Small"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/category_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/profile_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <AutoCompleteTextView
            android:id="@+id/expense_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textColor="@color/white"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/note"
        android:layout_marginTop="10dp"
        android:layout_gravity="start"
        style="@style/App.Input.Text.Small"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/note_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="..."
        style="@style/App.Input.Layout">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/note_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            style="@style/App.Input.Layout"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/entry_expense_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/add_expense"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textFontWeight="600"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium" />
</LinearLayout>