<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/amount"
        android:layout_marginTop="10dp"
        android:layout_gravity="start"
        style="@style/App.Input.Text.Small"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/amount_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/App.Input.Layout">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/amount_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            style="@style/App.Input.Layout"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/from"
        android:layout_marginTop="10dp"
        android:layout_gravity="start"
        style="@style/App.Input.Text.Small"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/from_wallet_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/App.Input.Layout">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/from_wallet_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            style="@style/App.Input.Layout"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/to"
        android:layout_marginTop="10dp"
        android:layout_gravity="start"
        style="@style/App.Input.Text.Small"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/to_wallet_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/App.Input.Layout">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/to_wallet_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            style="@style/App.Input.Layout"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/entry_budget_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/add_budget"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textFontWeight="600"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium" />
</LinearLayout>